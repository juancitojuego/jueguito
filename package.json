{
  "name": "stone-crafter",
  "version": "1.0.0",
  "description": "A terminal game about procedurally generated stones.",
  "main": "dist/index.js",
  "bin": {
    "stone-crafter": "dist/index.js"
  },
  "scripts": {
    "build": "./node_modules/.bin/tsc",
    "start": "node dist/index.js",
    "dev": "./node_modules/.bin/tsc -w & nodemon dist/index.js",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "blessed": "^0.1.81",
    "chalk": "^4.1.2",
    "seedrandom": "^3.0.5",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.25",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "@types/seedrandom": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.4",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
