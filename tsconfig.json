{
  "compilerOptions": {
    "target": "ES2022", // Keep or upgrade to ESNext if needed
    "module": "ESNext",  // Change to ESNext for import.meta and modern module features
    "moduleResolution": "bundler", // Or "node", "nodenext". Vite prefers "bundler" or "ESNext"
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".", // Added baseUrl
    "paths": { // Added paths
      "@src/*": ["src/*"]
    },
    "strict": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
